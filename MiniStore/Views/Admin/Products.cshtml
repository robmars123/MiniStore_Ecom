@model Business.ViewModels.AdminViewModel
@{
    Layout = "~/Views/Admin/_Layout.cshtml";
}
<div class="table-responsive-lg">
    <table class="table table-borderless">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => Model.Product.Product_Name)</th>
                <th>@Html.DisplayNameFor(model => Model.Product.Category_Id)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr class="text-dark clickable-row" data-href="@Url.Action("Details", "Products", new { id = item.Product_Id})">
                        <td>
                            <a href="@Url.Action("Details", "Products", new { id = item.Product_Id})">
                                @Html.DisplayFor(modelItem => item.Product_Name)
                            </a></td>
                        <td>@Html.DisplayFor(modelItem => item.Categories.Category_Name)</td>
                </tr>
            }

        </tbody>
    </table>
</div>