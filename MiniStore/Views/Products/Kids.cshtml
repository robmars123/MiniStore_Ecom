@model Business.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/products-content/product-page.css" rel="stylesheet" />
<h2>Kids Apparel</h2>

<br style="clear:both" />
<div class="container">
    <div>
        <div class="row p-5">
            @foreach (var item in Model.productList)
            {
                <div class="col-md-3 col-sm-3 col-xs-12 image-main-section">
                    <a href="@Url.Action("Details", "Products", new { id = item.Product_Id})">
                        <div class="row img-part text-center">
                            <div class="m-auto product-box">
                                @if (item.productImages.Count != 0)
                                {
                                    foreach (var image in item.productImages.Select((value, i) => new { i, value }))
                                    {
                                        var index = image.i;
                                        if (index == 0)
                                        {
                                            <img src="@image.value.ConvertedProductImage" style="max-width: 150px; max-height: 200px;display: inline-block;" id="myImg" class="pt-4 pb-4" />
                                        }
                                    }
                                }
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12 image-title  font-weight-bold">
                                <span>@Html.DisplayFor(model => item.Product_Name)</span>
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12 image-description font-weight-bold">
                                <p>@Html.DisplayFor(model => item.Price)</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>

