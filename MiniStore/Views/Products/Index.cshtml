@model Business.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Index";
}
<link href="~/Content/products-content/product-page.css" rel="stylesheet" />
<br style="clear:both" />
<body>
    <div id="demo" class="carousel slide" data-ride="carousel">

        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>

        <!-- The slideshow -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/watch1.png" alt="Los Angeles" class="carousel-img">
            </div>
            <div class="carousel-item">
                <img src="~/Images/watch2.png" alt="Chicago" class="carousel-img">
            </div>
            <div class="carousel-item">
                <img src="~/Images/Watch3.png" alt="New York" class="carousel-img">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev text-black-50" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next text-black-50" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
    <div class="text-center mb-lg-5 mt-lg-5">
        <h4>Featured Collection</h4>
    </div>
    <div class="container">
        <div>
            <div class="row">
                @foreach (var item in Model.productList)
                {
                    <div class="col col-xs-6 col-sm-6 col-md-3 image-main-section">
                        <a href="@Url.Action("Details", "Products", new { id = item.Product_Id})">
                            <div class="row img-part text-center">
                                <div class="m-auto product-box">
                                    @if (item.productImages.Count != 0)
                                    {
                                        foreach (var image in item.productImages.Select((value, i) => new { i, value }))
                                        {
                                            var index = image.i;
                                            if (index == 0)
                                            {
                                                <img src="@image.value.ConvertedProductImage" style="max-width: 150px; max-height: 200px;display: inline-block;" id="myImg" class="pt-4 pb-4"/>
                                            }
                                        }
                                    }
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12 image-title  font-weight-bold">
                                    <span>@Html.DisplayFor(model => item.Product_Name)</span>
                                </div>
                                <div class="col-md-12 col-sm-12 col-xs-12 image-description font-weight-bold">
                                    <p>@Html.DisplayFor(model => item.Price)</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</body>

